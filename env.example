# Application
NODE_ENV=development
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info
APP_KEY=your-super-secret-app-key-32-characters-long

# Database (AdonisJS)
DB_CONNECTION=pg
PG_HOST=postgres
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=password
PG_DB_NAME=kesimarket_modern

# Database (PostgreSQL Container)
POSTGRES_DB=kesimarket_modern
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=fr_FR.UTF-8

# MinIO Object Storage (AdonisJS)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# MinIO Object Storage (MinIO Container)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001
MINIO_CONSOLE_URL=http://localhost:9001

# Redis (AdonisJS)
REDIS_CONNECTION=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-here

# File uploads
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin,x-session-id

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=900000

# Email (if needed later)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
MAIL_FROM_ADDRESS=noreply@kesimarket-modern.com
MAIL_FROM_NAME="KesiMarket Modern" 